#include<iostream>
#include<string>
#include<fstream>
#include<algorithm>

int main() {
  
  std::fstream inFile;
  std::string str;
  std::string vowelChar {"iouea"};
  std::vector<std::string> words;
  char chars[]{" ()!:;.,\"\'\n"};
  bool condition = true;
  //  bool cn2 = false;

  
  // int j{0};
  
  inFile.open("Error_find.txt");
  if(!inFile)          
    std::cout << "Unable to open inFile";

  while(inFile >> str) {
    condition = true;

    
    for(unsigned int i{0}; i < sizeof(chars)/sizeof(chars[0]); ++i) {
      str.erase(std::remove(str.begin(), str.end(), chars[i]), str.end());
    }
    if(str.length() >= 5) {
      for(unsigned int j{0}; j < str.length(); j++) {
	if(vowelChar.find(str[j]) != std::string::npos) {
	  condition = false; 
	}
    }
      if(condition == true) {
	for(unsigned int k{0}; k < str.length(); k++) {
	  if(str[k] >= 'A' && str[k] <= 'Z') {
	    condition = false;
	  }
	  else
	    condition = true;
	}
      }
      if (condition == true)
	std::cout << str << std::endl;
    }
  }
  
  inFile.close();

  return 0;
  }
  
